{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base", "next/core-web-vitals"],
  "overrides": [
    {
      "files": ["*.jsx"],
      "extends": ["plugin:react/recommended"],
      "rules": {
        "indent": ["error", 2],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": [
          "error",
          { "ignore": ["children"], "skipUndeclared": true }
        ]
      }
    },
    {
      "files": ["*.js"],
      "rules": {
        "indent": ["error", 4],
        "no-param-reassign": ["error", { "props": false }]
      }
    },
    {
      "files": ["*config*"],
      "rules": {
        "indent": ["error", 2]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "eqeqeq": "error",
    "curly": "error",
    "linebreak-style": ["off"],
    "quotes": ["error", "single"]
  },
  "plugins": ["import", "react"]
}
